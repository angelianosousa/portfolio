<!DOCTYPE html>
<html>
  <head>
    <title>Backoffice | MyPortfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'backoffice', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'backoffice', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>    
    <%= render 'shared/navbar_office' %>

    <% if notice %>
      <div class="notification is-primary">
        <button class="delete"></button>
        <p><%= notice %></p>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
