<main role="main">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron" id='top-site'>
    <div class="container">
      <h1 class="display-4">Seja bem Vindo!</h1><br>
      <p>Esse Ã© o portfolio do Angeliano com os projetos atuais</p>
      <br>
      <p><a class="btn btn-primary btn-lg" href="#" role="button">Clique para ver mais &raquo;</a></p>
    </div>
  </div>

  <div class="container">
    <!-- Example row of columns -->
    <div class="columns is-multiple">
      <% @projects.each do |project| %>
        <div class="column is-one-third">
          <div class="card mb-4 shadow-sm">
            <%= project.photo_principal.attached? ? image_tag(project.photo_principal.third, class:"image is-128x128 is-centered") : image_tag("https://bulma.io/images/placeholders/1280x960.png", size:"1280x960") %>
            <div class="card-body has-background-grey-dark">

              <div class='columns'>
                <div class='column'>
                  <p class='title is-6 has-text-white'>Links do projeto:</p>
                  <div class="media">
                    <figure class="image is-48x48">
                      <%= link_to project.production_link, class:"tag is-warning is-large", target:"_blank" do %>
                        <% image_tag 'server.png' %>
                      <% end %>
                    </figure>&nbsp;&nbsp;
                    <figure class="image is-64x64" style="widht:50px;">
                      <%= link_to project.repository_link, class:"tag is-large", target:"_blank" do %>
                        <% image_tag 'GitHub-Emblema.png' %>
                      <% end %>
                    </figure>
                  </div>
                </div>

                <div class='column'>
                  <p class='title is-6 has-text-white'>Tecnologias:</p>
                  <figure class="image is-48x48">
                    <% project.projects_stacks.each do |project_stack| %>
                      <%= project_stack.stack.picture.attached? ? image_tag(project_stack.stack.picture) : image_tag("https://bulma.io/images/placeholders/1280x960.png", class:"image is-64x64") %>
                    <% end %>
                  </figure>&nbsp;&nbsp;
                </div>
              </div>

              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to project_path(project), class:"button card-footer-item is-link is-small is-rounded" do %>
                    <i class='fas fa-eye'></i>
                  <% end %>&nbsp;
                  <% if user_signed_in? %>
                    <%= link_to edit_backoffice_project_path(project), class:"button card-footer-item is-success is-small is-rounded" do %>
                      <i class='fas fa-edit'></i>
                    <% end %>&nbsp;
                    <%= link_to backoffice_project_path(project), method: :delete, data: { confirm: "Apagar projeto: #{project.title} ?"}, class:"button card-footer-item is-small is-danger is-rounded" do %>
                      <i class='fas fa-trash'></i>
                    <% end %> 
                  <% end %> 
                </div>
                <small class="text-muted has-text-white">9 mins</small>
              </div>
            </div>

          </div>

        </div>
      <% end %>
    </div>

    <hr>

  </div> <!-- /container -->

</main>
