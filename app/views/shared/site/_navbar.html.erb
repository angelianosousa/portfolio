      </a>
    </div>

    <div class="navbar-end is-justify-content-end">
      <div class="navbar-item">
        <div class="buttons">
          <% if user_signed_in? %>
            <%= link_to 'Backstage', backoffice_projects_path, class:"button is-primary" %>
            <%= link_to "Sair", destroy_user_session_path, method: :delete, data: { confirm: "Tem certeza que quer sair ?" }, class:"button is-danger" %>
