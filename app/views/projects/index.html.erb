
<nav class="navbar">
  <div class="navbar-brand">
    <div class="navbar-item">
      <span class='icon'>
        <i class='fas fa-book'></i>
      </span>
      <h6 class='title is-6'>Lista de Projetos (<%= @projects.count %>)</h6>
    </div>
  </div>

  <div class='navbar-end'>
    <div class='navbar-item'>
      <div class="panel-block">
        <p class="control has-icons-left">
          <input class="input" type="text" placeholder="Search">
          <span class="icon is-left">
            <i class="fas fa-search" aria-hidden="true"></i>
          </span>
        </p>
      </div>
    </div>
    <div class='navbar-item'>
      <%= link_to new_project_path, class:"button is-success" do %>
        <i class='fas fa-plus-square'></i> &nbsp;Novo Projeto
      <% end %>
    </div>
  </div>
</nav>

<section class='section'>
  <div class='columns is-multiline'>
    <% @projects.each do |project| %>
      <div class='column is-3'>
        <div class="card has-background-grey-dark has-text-light is-rounded">
          <header class="card-header">
            <div class="card-header-icon">
              <span class="icon">
                <i class="fas fa-info-circle" aria-hidden="true"></i>
              </span>
            </div>
            <p class="card-header-title has-text-light">
              <%= project.title.truncate(20) %>
            </p>
          </header>

          <div class="card-image">
            <figure class="image is-2by1">
              <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
            </figure>
          </div>

          <div class="card-content is-centered">
            <div class="media">
              <figure class="image is-48x48">
                <%= image_tag "#{project.stacks.capitalize}-icon.png" %>
              </figure>
            </div>

            <footer class="card-footer" style="padding-top:10px;">
              <%= link_to project_path(project), class:"button card-footer-item is-link is-light is-small is-rounded" do %>
                <i class='fas fa-eye'></i>
              <% end %>&nbsp;
              <%= link_to edit_project_path(project), class:"button card-footer-item is-success is-light is-small is-rounded" do %>
                <i class='fas fa-edit'></i>
              <% end %>&nbsp;
              <%= link_to project_path(project), method: :delete, data: { confirm: "Apagar projeto: #{project.title} ?"}, class:"button card-footer-item is-light is-small is-danger is-rounded" do %>
                <i class='fas fa-trash'></i>
              <% end %> 
            </footer>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
