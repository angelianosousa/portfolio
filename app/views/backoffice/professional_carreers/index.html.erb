<section class="section">
  <div class='container'>
    <div class='columns is-multiline is-centered'>
      <% @professional_carreers.each do |professional_carreer| %>
        <div class='column is-one-third'>
          <div class="card">

            <header class="card-header">
              <button class="card-header-icon" aria-label="more options">
                <span class="icon">
                  <i class="fas fa-info-circle" aria-hidden="true"></i>
                </span>
              </button>
              <p class="card-header-title">
                Cargo: <%= professional_carreer.occupation %>
              </p>
            </header>

            <div class="card-content">
              <div class="content">
                <h6 class='title is-6'>Período: &nbsp;<%= professional_carreer.period %></h6>
                <h6 class='title is-6'>Descrição do Trabalho:</h6>
                <p><%= professional_carreer.description %></p>
              </div>
            </div>

            <footer class="card-footer">
              <%= link_to edit_backoffice_professional_carreer_path(professional_carreer), class:"button card-footer-item is-success is-small is-rounded is-light" do %>
                <i class='fas fa-edit'></i>
              <% end %>
              <%= link_to backoffice_professional_carreer_path(professional_carreer), method: :delete, data: { confirm: "Apagar a experiência de: #{professional_carreer.occupation} ?"}, class:"button card-footer-item is-small is-danger is-rounded is-light" do %>
                <i class='fas fa-trash'></i>
              <% end %>
            </footer>

          </div>
        </div>
      <% end %>
    </div>
  </div>

</section>
